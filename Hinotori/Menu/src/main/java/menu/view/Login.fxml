               <children>
                  <VBox fx:id="vbLogin" alignment="CENTER" spacing="20.0">
                     <children>
                        <HBox>
                           <children>
                              <Label text="Login" textFill="#757575">
                                 <font>
                                    <Font name="Times New Roman" size="40.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <JFXComboBox fx:id="cbBoxUsuario" maxWidth="200.0" minWidth="200.0" onKeyPressed="#onUserEnter" prefWidth="200.0" promptText="Usuário" />
                              <JFXPasswordField fx:id="pswFieldPassword" maxWidth="200.0" minWidth="200.0" onKeyPressed="#onPasswordEnter" prefWidth="200.0" promptText="Senha" />
