<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="background" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pdv.controller.cadastros.CadProdutoController">
  <content>
    <AnchorPane styleClass="background-cartao">
         <children>
            <HBox alignment="CENTER" prefHeight="200.0" styleClass="tituloBackground-produto" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Cadastro de Produto" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <effect>
                        <DropShadow spread="0.5" />
                     </effect>
                  </Label>
               </children>
            </HBox>
            <VBox alignment="TOP_CENTER" layoutX="15.0" layoutY="145.0" minHeight="530.0" minWidth="550.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
               <children>
                  <VBox alignment="TOP_CENTER" maxHeight="700.0" maxWidth="1000.0" minHeight="400.0" minWidth="500.0" spacing="20.0" styleClass="background-dados">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <effect>
                        <DropShadow height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" width="15.0" />
                     </effect>
                     <children>
                        <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox alignment="CENTER" minHeight="35.0" spacing="5.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <JFXTextField fx:id="txtId" labelFloat="true" minHeight="30.0" onKeyPressed="#onTxtIdEnter" onMouseClicked="#onTxtIdClick" prefWidth="100.0" promptText="Id">
                                             <font>
                                                <Font name="Times New Roman" size="12.0" />
                                             </font>
                                             <tooltip>
                                                <Tooltip text="Valor 0 para um registro novo ou digite um código de cliente para pesquisar." />
                                             </tooltip>
                                          </JFXTextField>
                                          <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <JFXComboBox fx:id="cbSituacao" minHeight="30.0" prefWidth="120.0" promptText="Situação" HBox.hgrow="ALWAYS" />
                                                <JFXComboBox fx:id="cbTipoProduto" minHeight="30.0" prefWidth="120.0" promptText="Tipo" HBox.hgrow="ALWAYS" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER" minHeight="35.0" spacing="5.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <JFXTextField fx:id="txtDescricao" cache="true" labelFloat="true" promptText="Descrição" HBox.hgrow="ALWAYS">
                                             <font>
                                                <Font name="Times New Roman" size="12.0" />
                                             </font>
                                          </JFXTextField>
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER" minHeight="35.0" spacing="5.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <JFXTextField fx:id="txtCodigoBarras" editable="false" labelFloat="true" promptText="Cod. Barras" HBox.hgrow="ALWAYS">
                                             <font>
                                                <Font name="Times New Roman" size="12.0" />
                                             </font>
                                          </JFXTextField>
                                       </children>
                                    </HBox>
                                 </children>
                                 <padding>
                                    <Insets top="30.0" />
                                 </padding>
                              </VBox>
                              <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                                 <children>
                                    <HBox alignment="CENTER" styleClass="background-imagens">
                                       <VBox.margin>
                                          <Insets />
                                       </VBox.margin>
                                       <children>
                                          <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../../resources/imagens/white/geral/icoProdutoImage_256.png" />
                                             </image>
                                          </ImageView>
                                       </children>
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </padding>
                                    </HBox>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <JFXButton fx:id="btnExcluirImagem" buttonType="RAISED" onAction="#onBtnExcluirImagemClick" onKeyPressed="#onBtnExcluirImagemEnter" styleClass="btnExcluir-produto" text="Excluir" />
                                          <JFXButton fx:id="btnProcurarImagem" buttonType="RAISED" onAction="#onBtnProcurarImagemClick" onKeyPressed="#onBtnProcurarImagemEnter" styleClass="btnProcurar-produto" text="Procurar" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" minHeight="35.0" spacing="5.0">
                           <children>
                              <fx:include fx:id="frameNCM" source="../frame/PesquisaGenerica.fxml" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" minHeight="35.0" spacing="5.0">
                           <children>
                              <JFXTextField fx:id="txtPesoLiquido" labelFloat="true" prefWidth="100.0" promptText="Peso líquido" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Times New Roman" size="12.0" />
                                 </font>
                              </JFXTextField>
                              <JFXTextField fx:id="txtPesoBruto" labelFloat="true" prefWidth="100.0" promptText="Peso bruto" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Times New Roman" size="12.0" />
                                 </font>
                              </JFXTextField>
                              <JFXTextField fx:id="txtVolume" labelFloat="true" prefWidth="100.0" promptText="Volume" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Times New Roman" size="12.0" />
                                 </font>
                              </JFXTextField>
                              <JFXTextField fx:id="txtQtdVolume" labelFloat="true" prefWidth="100.0" promptText="Qtd. no volume" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Times New Roman" size="12.0" />
                                 </font>
                              </JFXTextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="80.0">
                           <children>
                              <JFXTextArea fx:id="txtAreaObservacao" promptText="Observação" styleClass="textArea-produto" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                     </VBox.margin>
                  </VBox>
                  <HBox alignment="CENTER" maxWidth="880.0" minWidth="400.0" spacing="10.0" styleClass="paneBotoes-produto">
                     <children>
                        <JFXButton fx:id="btnConfirmar" alignment="CENTER" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnConfirmarClick" onKeyPressed="#onBtnConfirmarEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Confirmar" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="btnCancelar" alignment="CENTER" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnCancelarClick" onKeyPressed="#onBtnCancelarEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Cancelar" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="btnExcluir" alignment="CENTER" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnExcluirClick" onKeyPressed="#onBtnExcluirEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Excluir" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="btnPesquisar" alignment="CENTER" graphicTextGap="10.0" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnPesquisarClick" onKeyPressed="#onBtnPesquisarEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Pesquisar" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXButton>
                     </children>
                     <padding>
                        <Insets bottom="40.0" left="10.0" right="10.0" top="30.0" />
                     </padding>
                     <VBox.margin>
                        <Insets left="60.0" right="60.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
  </content>
   <stylesheets>
      <URL value="@../../resources/css/Paleta_Cores.css" />
      <URL value="@../../resources/css/White_Cadastros.css" />
   </stylesheets>
</ScrollPane>
