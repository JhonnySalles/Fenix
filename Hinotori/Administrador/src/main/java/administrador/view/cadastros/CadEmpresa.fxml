<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="background" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="administrador.controller.cadastros.CadEmpresaController">
  <content>
      <StackPane fx:id="spTelas" alignment="TOP_CENTER">
         <children>
          <AnchorPane fx:id="rootEmpresa" styleClass="background-cartao">
               <children>
                  <HBox alignment="CENTER" prefHeight="200.0" styleClass="titBackound-empresa" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Cadastro de Empresa" textFill="WHITE" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="24.0" />
                           </font>
                           <effect>
                              <DropShadow spread="0.5" />
                           </effect>
                        </Label>
                     </children>
                  </HBox>
                  <VBox alignment="TOP_CENTER" maxHeight="1000.0" maxWidth="1200.0" minHeight="460.0" minWidth="650.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
                     <children>
                        <VBox alignment="TOP_CENTER" maxHeight="800.0" maxWidth="1000.0" minHeight="350.0" minWidth="600.0" spacing="30.0" styleClass="background-dados">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <effect>
                              <DropShadow height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" width="15.0" />
                           </effect>
                           <children>
                              <HBox alignment="CENTER" minHeight="30.0" prefHeight="40.0" prefWidth="388.0" spacing="5.0">
                                 <children>
                                    <JFXTextField fx:id="txtId" labelFloat="true" minHeight="30.0" onKeyPressed="#onTxtIdEnter" onMouseClicked="#onTxtIdClick" prefWidth="100.0" promptText="Id">
                                       <font>
                                          <Font name="Times New Roman" size="12.0" />
                                       </font>
                                       <tooltip>
                                          <Tooltip text="Valor 0 para um registro novo ou digite um código de cliente para pesquisar." />
                                       </tooltip>
                                    </JFXTextField>
                                    <HBox alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <JFXComboBox fx:id="cbSituacao" minHeight="30.0" prefWidth="120.0" promptText="Situação" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <HBox VBox.vgrow="ALWAYS">
                                             <children>
                                                <JFXTextField fx:id="txtRazaoSocial" labelFloat="true" promptText="Razão Social" HBox.hgrow="ALWAYS">
                                                   <font>
                                                      <Font name="Times New Roman" size="12.0" />
                                                   </font>
                                                </JFXTextField>
                                             </children>
                                          </HBox>
                                          <HBox VBox.vgrow="ALWAYS">
                                             <children>
                                                <JFXTextField fx:id="txtNomeFantasia" labelFloat="true" promptText="Nome Fantasia" HBox.hgrow="ALWAYS">
                                                   <font>
                                                      <Font name="Times New Roman" size="12.0" />
                                                   </font>
                                                </JFXTextField>
                                             </children>
                                          </HBox>
                                          <HBox VBox.vgrow="ALWAYS">
                                             <children>
                                                <JFXTextField fx:id="txtCnpj" labelFloat="true" promptText="CNPJ" HBox.hgrow="ALWAYS">
                                                   <font>
                                                      <Font name="Times New Roman" size="12.0" />
                                                   </font>
                                                </JFXTextField>
                                             </children>
                                          </HBox>
                                          <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
                                             <children>
                                                <JFXButton fx:id="btnContato" buttonType="RAISED" onAction="#onBtnContatoClick" onKeyPressed="#onBtnContatoEnter" styleClass="btnContatos-empresa" text="Cad. Contato">
                                                   <graphic>
                                                      <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../../resources/imagens/white/cadastros/btnContato_100.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </JFXButton>
                                                <JFXButton fx:id="btnEndereco" buttonType="RAISED" onAction="#onBtnEnderecoClick" onKeyPressed="#onBtnEnderecoEnter" styleClass="btnEndereco-empresa" text="Cad. Endereço">
                                                   <graphic>
                                                      <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../../resources/imagens/white/cadastros/btnEndereco_100.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </JFXButton>
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    <VBox alignment="CENTER" spacing="10.0">
                                       <children>
                                          <VBox alignment="CENTER" styleClass="background-imagens">
                                             <children>
                                                <ImageView fx:id="imgLogo" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@../../resources/imagens/icon/icoPedidosVenda_1000.png" />
                                                   </image>
                                                </ImageView>
                                             </children>
                                             <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                             </padding>
                                             <VBox.margin>
                                                <Insets />
                                             </VBox.margin>
                                          </VBox>
                                          <HBox alignment="CENTER" spacing="10.0">
                                             <children>
                                                <JFXButton fx:id="btnExcluirImagem" buttonType="RAISED" onAction="#onBtnExcluirImagemClick" onKeyPressed="#onBtnExcluirImagemEnter" styleClass="btnExcluir-usuario" text="Excluir" textFill="WHITE" />
                                                <JFXButton fx:id="btnProcurarImagem" buttonType="RAISED" onAction="#onBtnProcurarImagemClick" onKeyPressed="#onBtnProcurarImagemEnter" styleClass="btnProcurar-usuario" text="Procurar" textFill="WHITE" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                           <VBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" />
                           </VBox.margin>
                        </VBox>
                        <HBox alignment="TOP_CENTER" fillHeight="false" maxWidth="880.0" minWidth="500.0" spacing="10.0" styleClass="paneBotoes-empresa" VBox.vgrow="ALWAYS">
                           <children>
                              <JFXButton fx:id="btnConfirmar" alignment="CENTER" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnConfirmarClick" onKeyPressed="#onBtnConfirmarEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Confirmar" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </JFXButton>
                              <JFXButton fx:id="btnCancelar" alignment="CENTER" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnCancelarClick" onKeyPressed="#onBtnCancelarEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Cancelar" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </JFXButton>
                              <JFXButton fx:id="btnExcluir" alignment="CENTER" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnExcluirClick" onKeyPressed="#onBtnExcluirEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Excluir" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </JFXButton>
                              <JFXButton fx:id="btnPesquisar" alignment="CENTER" maxHeight="35.0" maxWidth="120.0" minHeight="35.0" minWidth="120.0" onAction="#onBtnPesquisarClick" onKeyPressed="#onBtnPesquisarEnter" prefHeight="35.0" prefWidth="120.0" ripplerFill="BLACK" text="Pesquisar" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </JFXButton>
                           </children>
                           <VBox.margin>
                              <Insets left="60.0" right="60.0" top="10.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="40.0" left="10.0" right="10.0" top="30.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
  </content>
   <stylesheets>
      <URL value="@../../resources/css/White_Cadastros.css" />
      <URL value="@../../resources/css/Paleta_Cores.css" />
   </stylesheets>
</ScrollPane>
